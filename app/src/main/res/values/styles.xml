<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    <style name="SimpleDialogLight" parent="Material.App.Dialog.Simple.Light">
        <item name="di_inAnimation">@anim/anim_scale_in</item>
        <item name="di_outAnimation">@anim/anim_scale_out</item>
    </style>
    <style name="SimpleDialog" parent="Material.App.Dialog.Simple">
        <item name="di_inAnimation">@anim/anim_scale_in</item>
        <item name="di_outAnimation">@anim/anim_scale_out</item>
    </style>
    <style name="ToolbarRippleStyle" parent="Material.Drawable.Ripple.Touch.MatchView.Light">
        <item name="rd_backgroundColor">@android:color/transparent</item>
        <item name="rd_rippleColor">#33FFFFFF</item>
    </style>
    <!--管理中心style-->
    <style name="ManageCenterRelative">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@drawable/ripple_manage_button</item>
        <item name="android:paddingBottom">15dp</item>
        <item name="android:paddingRight">5dp</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="ManageCenterRelativeTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:textColor">@color/text_normal</item>
        <item name="android:textSize">15dp</item>
    </style>

    <style name="ManageCenterRelativeInfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginLeft">3dp</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">#777777</item>
    </style>

    <style name="ManageCenterExtraFunction">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:paddingTop">15dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">14dp</item>
        <item name="android:background">@drawable/ripple_manage_button</item>
    </style>

    <style name="BottomLine">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">#FFD7D7D7</item>
    </style>

    <style name="ListDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@drawable/shape_list_divider</item>
    </style>

    <style name="TextAppearance_AppName_ManageList">
        <item name="android:textColor">#484e5a</item>
        <item name="android:textSize">16dp</item>
        <item name="android:singleLine">true</item>
    </style>

    <!-- app title style -->
    <style name="asset_main_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/asset_title_color</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:textSize">14dip</item>
    </style>

    <!-- app other info style -->
    <style name="asset_secondary_style" parent="asset_main_style">
        <item name="android:textColor">@color/asset_info_color</item>
        <item name="android:textSize">12dip</item>
    </style>

    <style name="ButtonAppearance_OpenArea_ManageList_Without_Backgound">
        <item name="android:gravity">center</item>
        <item name="android:textSize">14dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>
</resources>
