<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_button_bg">

    <ImageView
        android:id="@+id/iv_task_icon"
        android:layout_width="50dip"
        android:layout_height="50dip"
        android:layout_margin="10dip" />

    <TextView
        android:id="@+id/tv_task_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="10dip"
        android:layout_toRightOf="@id/iv_task_icon"
        android:text="程序名称程序名称程序名称程序名称程序名称程序名称程序名称程序名称"
        android:ellipsize="end"
        android:singleLine="true"
        android:maxWidth="270dp"
        android:textColor="#000000"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tv_memsize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_task_name"
        android:layout_marginLeft="5dip"
        android:layout_marginTop="8dip"
        android:layout_toRightOf="@id/iv_task_icon"
        android:text="内存占用"
        android:textColor="#88000000"
        android:textSize="14sp" />

    <CheckBox
        android:id="@+id/checkbox_task_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dip"
        android:clickable="false"
        android:focusable="false" />
</RelativeLayout>